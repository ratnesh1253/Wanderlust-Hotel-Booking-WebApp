<% layout("/layouts/boilerplate") %>

    <div class="row mt-3 mb-3">
        <div class="col-8 offset-2">
                <h3>Update Listing</h3>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mt-3 mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input id="title" class="form-control" type="text" name="listing[title]" value="<%= listing.title %>" placeholder="Hotel name" required>
                        <div class="valid-feedback">Title looks good!</div>
                        <div class="invalid-feedback">Title cannot be empty</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" class="form-control" name="listing[description]" placeholder="Provide brief description" required>
                                <%= listing.description %>
                        </textarea>
                        <div class="invalid-feedback">Enter short description</div>
                    </div>

                                <div class="mb-3">
                                        Original Listing Image <br/>
                                        <img src="<%= originalImageUrl %>">
                                </div>

                                <div class="mb-3">
                                        <label for="image" class="form-label">Upload New Image</label>
                                        <input id="image" class="form-control" type="file" name="listing[image]">
                                </div>

                                <div class="row">
                                        <div class="mb-3 col-md-4">
                                                <label for="price" class="form-label">Price</label>
                                                <input id="price" class="form-control" type="number"
                                                        name="listing[price]" value="<%= listing.price %>"
                                                        placeholder="e.g 1800" required>
                                                <div class="invalid-feedback">Price must be a valid number</div>

                                        </div>

                                        <div class="mb-3 col-md-8">
                                                <label for="country" class="form-label">Country</label>
                                                <select id="country" class="form-control" type="text"
                                                        name="listing[country]" value="<%= listing.country %>"
                                                        placeholder="Enter country" required>
                                                        <option value="Australia" <%=listing.country==='Australia'
                                                                ? 'selected' : '' %>>Australia</option>
                                                        <option value="Canada" <%=listing.country==='Canada'
                                                                ? 'selected' : '' %>>Canada</option>
                                                        <option value="Costa Rica" <%=listing.country==='Costa Rica'
                                                                ? 'selected' : '' %>>Costa Rica</option>
                                                        <option value="Fiji" <%=listing.country==='Fiji' ? 'selected'
                                                                : '' %>>Fiji</option>
                                                        <option value="Greece" <%=listing.country==='Greece'
                                                                ? 'selected' : '' %>>Greece</option>
                                                        <option value="Iceland" <%=listing.country==='Iceland'
                                                                ? 'selected' : '' %>>Iceland</option>
                                                        <option value="India" <%=listing.country==='India' ? 'selected'
                                                                : '' %>>India</option>
                                                        <option value="Indonesia" <%=listing.country==='Indonesia'
                                                                ? 'selected' : '' %>>Indonesia</option>
                                                        <option value="Italy" <%=listing.country==='Italy' ? 'selected'
                                                                : '' %>>Italy</option>
                                                        <option value="Japan" <%=listing.country==='Japan' ? 'selected'
                                                                : '' %>>Japan</option>
                                                        <option value="Maldives" <%=listing.country==='Maldives'
                                                                ? 'selected' : '' %>>Maldives</option>
                                                        <option value="Mexico" <%=listing.country==='Mexico'
                                                                ? 'selected' : '' %>>Mexico</option>
                                                        <option value="Netherlands" <%=listing.country==='Netherlands'
                                                                ? 'selected' : '' %>>Netherlands</option>
                                                        <option value="New Zealand" <%=listing.country==='New Zealand'
                                                                ? 'selected' : '' %>>New Zealand</option>
                                                        <option value="Peru" <%=listing.country==='Peru' ? 'selected'
                                                                : '' %>>Peru</option>
                                                        <option value="Russia" <%=listing.country==='Russia'
                                                                ? 'selected' : '' %>>Russia</option>
                                                        <option value="South Africa" <%=listing.country==='South Africa'
                                                                ? 'selected' : '' %>>South Africa</option>
                                                        <option value="Switzerland" <%=listing.country==='Switzerland'
                                                                ? 'selected' : '' %>>Switzerland</option>
                                                        <option value="Tanzania" <%=listing.country==='Tanzania'
                                                                ? 'selected' : '' %>>Tanzania</option>
                                                        <option value="Thailand" <%=listing.country==='Thailand'
                                                                ? 'selected' : '' %>>Thailand</option>
                                                        <option value="United Arab Emirates"
                                                                <%=listing.country==='United Arab Emirates' ? 'selected'
                                                                : '' %>>United Arab
                                                                Emirates</option>
                                                        <option value="United Kingdom"
                                                                <%=listing.country==='United Kingdom' ? 'selected' : ''
                                                                %>>United Kingdom</option>
                                                        <option value="United States"
                                                                <%=listing.country==='United States' ? 'selected' : ''
                                                                %>>United States</option>
                                                </select>
                                                <div class="invalid-feedback">Select a country from list</div>
                                        </div>
                                </div>

                                <div class="mb-3">
                                        <label for="location" class="form-label">Location</label>
                                        <input id="location" class="form-control" type="text" name="listing[location]"
                                                value="<%= listing.location %>" placeholder="Enter city or region"
                                                required>
                                        <div class="invalid-feedback">Location is required</div>

                                </div>

                                <button class="btn btn-dark edit-btn">Update</button>

                        </form>
                </div>
        </div>